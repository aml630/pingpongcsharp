<h1>Contact List</h1>
@if (@Model.Count == 0)
{
  <h2> no contacts added yet</h2>
}
  @foreach (var contact in @Model)
  {
    <li>@contact.GetName()</li>
    <li>@contact.GetAddress()</li>
    <li>@contact.GetPhoneNumber()</li>
  }
<p><a href="contacts/new">add a new contact</a></p>
<p><a href="contacts/cleared">delete all contacts</a></p>
<p><a href="/">Homepage</a></p>
